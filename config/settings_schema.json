            {
                "type": "header",
                "content": "Shadow"
            },
            {
                "type": "range",
                "id": "buttons_shadow_opacity",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "%",
                "label": "Opacity",
                "default": 0
