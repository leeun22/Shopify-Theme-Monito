[{
        "name": "theme_info",
        "theme_name": "Theme_Sunset",
        "theme_version": "1.0.0",
        "theme_author": "Leeun",
        "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
        "theme_support_url": "https://support.shopify.com/"
    },
    {
        "name": "Logo",
        "settings": [{
                "type": "image_picker",
                "id": "logo",
                "label": "Logo"
            },
            {
                "type": "range",
                "id": "logo_width",
                "min": 50,
                "max": 500,
                "step": 10,
                "default": 100,
                "unit": "px",
                "label": "Desktop logo width"
            }
        ]
    },
    {
        "name": "Color",
        "settings": [{
            "type": "color_scheme_group",
            "id": "color_schemes",
            "definition": [{
                    "type": "color",
                    "id": "color_background",
                    "label": "Background",
                    "default": "#FFFFFF"
                },
                {
                    "type": "color_background",
                    "id": "color_background_gradient",
                    "label": "Background Gradient",
                    "info": "No color chosen Background gradient replaces background where possible."
                },
                {
                    "type": "color",
                    "id": "color_nav_menu",
                    "label": "Nav menu",
                    "default": "#003459"
                },
                {
                    "type": "color",
                    "id": "color_heading_banner",
                    "label": "Heading banner",
                    "default": "#002A48"
                },
                {
                    "type": "color",
                    "id": "color_subheading_banner",
                    "label": "Subheading banner",
                    "default": "#002A48"
                },
                {
                    "type": "color",
                    "id": "color_text_banner",
                    "label": "Text banner",
                    "default": "#242B33"
                },
                {
                    "type": "color",
                    "id": "color_heading_body",
                    "label": "Heading body",
                    "default": "#003459"
                },
                {
                    "type": "color",
                    "id": "color_subheading_body",
                    "label": "Subheading body",
                    "default": "#00171F"
                },
                {
                    "type": "color",
                    "id": "color_text_body",
                    "label": "Text body",
                    "default": "#667479"
                },
                {
                    "type": "color",
                    "id": "color_caption_body",
                    "label": "Caption body",
                    "default": "#000000"
                },
                {
                    "type": "color",
                    "id": "color_input_label",
                    "label": "Input label",
                    "default": "#99A2A5"
                },
                {
                    "type": "color",
                    "id": "color_button_primary",
                    "label": "Solid button background",
                    "info": "Chosen color for button background"
                },
                {
                    "type": "color",
                    "id": "color_button_border_primary",
                    "label": "Solid button border",
                    "default": "#003459"
                },
                {
                    "type": "color",
                    "id": "color_button_label_primary",
                    "label": "Solid button label",
                    "default": "#003459"
                },
                {
                    "type": "color",
                    "id": "color_button_secondary",
                    "label": "Outline button background",
                    "default": "#003459"
                },
                {
                    "type": "color",
                    "id": "color_button_border_secondary",
                    "label": "Outline button border",
                    "info": "Chosen color for button border"
                },
                {
                    "type": "color",
                    "id": "color_button_label_secondary",
                    "label": "Outline button label",
                    "default": "#FDFDFD"
                },
                {
                    "type": "color",
                    "id": "color_shadow",
                    "label": "Shadow",
                    "default": "#121212"
                }
            ],
            "role": {
                "text": "color_heading_body",
                "background": {
                    "solid": "color_background",
                    "gradient": "color_background_gradient"
                },
                "links": "color_subheading_body",
                "icons": "color_heading_body",
                "primary_button": "color_button_primary",
                "on_primary_button": "color_button_label_primary",
                "primary_button_border": "color_button_border_primary",
                "secondary_button": "color_button_secondary",
                "on_secondary_button": "color_button_label_secondary",
                "secondary_button_border": "color_button_border_secondary"
            }
        }]
    },
    {
        "name": "Typography",
        "settings": [{
                "type": "header",
                "content": "Headings"
            },
            {
                "type": "font_picker",
                "id": "type_header_font",
                "default": "assistant_n4",
                "label": "Font",
                "info": "Selecting a different font can affect the speed of your store."
            },
            {
                "type": "range",
                "id": "heading_scale",
                "min": 100,
                "max": 150,
                "step": 5,
                "unit": "%",
                "label": "Font size scale",
                "default": 100
            },
            {
                "type": "header",
                "content": "Body"
            },
            {
                "type": "font_picker",
                "id": "type_body_font",
                "default": "assistant_n4",
                "label": "Font",
                "info": "Selecting a different font can affect the speed of your store."
            },
            {
                "type": "range",
                "id": "body_scale",
                "min": 100,
                "max": 130,
                "step": 5,
                "unit": "%",
                "label": "Font size scale",
                "default": 100
            }
        ]
    },
    {
        "name": "Layout",
        "settings": [{
                "type": "range",
                "id": "page_width",
                "min": 1000,
                "max": 1600,
                "step": 100,
                "default": 1400,
                "unit": "px",
                "label": "Page width"
            },
            {
                "type": "range",
                "id": "spacing_sections",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Space between template sections",
                "default": 0
            },
            {
                "type": "header",
                "content": "Grid"
            },
            {
                "type": "paragraph",
                "content": "Affects areas with multiple columns or rows."
            },
            {
                "type": "range",
                "id": "spacing_grid_horizontal",
                "min": 4,
                "max": 40,
                "step": 4,
                "default": 8,
                "unit": "px",
                "label": "Horizontal space"
            },
            {
                "type": "range",
                "id": "spacing_grid_vertical",
                "min": 4,
                "max": 40,
                "step": 4,
                "default": 8,
                "unit": "px",
                "label": "Vertical space"
            }
        ]
    },
    {
        "name": "Animations",
        "settings": [{
                "type": "checkbox",
                "id": "animations_reveal_on_scroll",
                "label": "Reveal sections on scroll",
                "default": true
            },
            {
                "type": "select",
                "id": "animations_hover_elements",
                "options": [{
                        "value": "default",
                        "label": "None"
                    },
                    {
                        "value": "vertical-lift",
                        "label": "Vertical lift"
                    },
                    {
                        "value": "3d-lift",
                        "label": "3D lift"
                    }
                ],
                "default": "default",
                "label": "Hover effect",
                "info": "Affects cards and buttons."
            }
        ]
    },
    {
        "name": "Buttons",
